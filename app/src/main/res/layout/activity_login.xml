<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="avc.com.avanco.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="609dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/avanco_logo_invert" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Acessar conta"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/login_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Telefone"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/login_senha"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_lock_"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15dp" />

            <Button
                android:id="@+id/botaoEntrar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:drawablePadding="10dp"
                android:text="Login"
                android:textColor="@android:color/black"
                android:textSize="16dp"

                />


            <TextView
                android:id="@+id/admin_panel_link"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:text="Eu sou fornecedor?  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/ic_setadir"

                />

            <TextView
                android:id="@+id/not_admin_panel_link"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Eu nÃ£o sou fornecedor?  "
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_btn"
                android:drawableRight="@drawable/ic_setaesq"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginStart="23dp"
                android:visibility="invisible"
                />


        </LinearLayout>


    </LinearLayout>


</ScrollView>


